<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgprod"
        android:layout_width="32dp"
        android:layout_height="129dp"
        android:layout_weight="20"
        android:gravity="start"
        android:onClick="clickDetailProduit"
        android:src="@drawable/sandwich" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="129dp"
        android:layout_margin="10dp"
        android:layout_weight="60"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:onClick="clickDetailProduit"
            android:text="Sandwich Jambon beurre"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="3.00$" />

        <TextView
            android:id="@+id/qtyprod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Quantite: " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="129dp"
        android:layout_weight="20"
        android:gravity="center">

        <Button
            android:id="@+id/addtoShop"
            android:layout_width="5dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>