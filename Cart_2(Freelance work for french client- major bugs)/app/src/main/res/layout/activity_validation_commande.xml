<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValidationCommandeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/navbarValidationCommande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Choisir une date \n pour passer une commande :"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40px" />

        <Spinner
            android:id="@+id/jourRamassage"
            android:entries="@array/jourRamassage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Choisir un horaire"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40px" />

        <Spinner
            android:id="@+id/heureRamassage"
            android:entries="@array/heureRamassage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:padding="20dp"
                android:text="ANNULER"
                android:textColor="#FFFF"
                android:textSize="50px"
                android:background="#ec1c24"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="ENVOYER"
                android:textColor="#FFFF"
                android:textSize="50px"
                android:padding="20dp"
                android:layout_marginLeft="40px"
                android:background="#00AF33"/>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>